<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="uk.ac.aber.dcs.cs39440.les35.guitartutorapp.ui.ScalesActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp">

        <include
            android:id="@+id/toolbar"
            layout="@layout/tool_bar"
            app:elevation="0dp" />
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:id="@+id/spinner_scales"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/scale_spinner_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chord_root_spinner_title" />

            <Spinner
                android:id="@+id/scale_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:dropDownWidth="match_parent"
                app:backgroundTint="@color/black"
                app:layout_constraintTop_toBottomOf="@id/chordRootSpinnerTitle" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/scale_note_spinner_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/chord_spinner_title" />

            <Spinner
                android:id="@+id/scale_note_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:dropDownWidth="match_parent"
                android:textSize="22sp"
                app:backgroundTint="@color/black"
                app:layout_constraintTop_toBottomOf="@id/chordSpinnerTitle" />

        </android.support.constraint.ConstraintLayout>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/scale_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:paddingBottom="58dp"
        android:clipToPadding="false"
        android:scrollbarSize="5dp"
        android:scrollbarThumbVertical="@android:color/darker_gray"
        android:scrollbars="vertical"
        android:fitsSystemWindows="true"
        app:layout_constraintTop_toBottomOf="@id/spinner_scales"
        tools:listitem="@layout/tab_layout" />

</android.support.constraint.ConstraintLayout>
