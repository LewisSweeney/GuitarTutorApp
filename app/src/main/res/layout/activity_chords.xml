<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="uk.ac.aber.dcs.cs39440.les35.guitartutorapp.ChordsActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/chord_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:id="@+id/spinner_chords"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chord_tool_bar">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/chordRootSpinnerTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chord_root_spinner_title" />

            <Spinner
                android:id="@+id/chordRootSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:dropDownWidth="match_parent"
                app:backgroundTint="@color/black"
                app:layout_constraintTop_toBottomOf="@id/chordRootSpinnerTitle"></Spinner>
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/chordSpinnerTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/chord_spinner_title" />

            <Spinner
                android:id="@+id/chordSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:dropDownWidth="match_parent"
                android:textSize="22sp"
                app:backgroundTint="@color/black"
                app:layout_constraintTop_toBottomOf="@id/chordSpinnerTitle"></Spinner>

        </android.support.constraint.ConstraintLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/chordName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="32sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinner_chords" />



    <ImageView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:id="@+id/chord_chart"
        android:paddingLeft="25dp"
        android:paddingTop="15dp"
        android:paddingRight="25dp"
        android:src="@drawable/drawable_chord_chart"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chordName" />

    <ImageView
        android:id="@+id/fret_marker_one"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/drawable_chord_fret_marker"
        android:paddingTop="48dp"
        android:layout_marginStart="52dp"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintLeft_toLeftOf="@id/chord_chart"
        app:layout_constraintRight_toRightOf="@id/chord_chart"
        app:layout_constraintTop_toTopOf="@id/chord_chart" />

    <ImageView
        android:id="@+id/fret_marker_two"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/drawable_chord_fret_marker"
        android:paddingTop="48dp"
        android:layout_marginStart="104dp"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintLeft_toLeftOf="@id/chord_chart"
        app:layout_constraintRight_toRightOf="@id/chord_chart"
        app:layout_constraintTop_toTopOf="@id/chord_chart" />

    <ImageView
        android:id="@+id/fret_marker_three"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/drawable_chord_fret_marker"
        android:paddingTop="48dp"
        android:layout_marginStart="156dp"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintLeft_toLeftOf="@id/chord_chart"
        app:layout_constraintRight_toRightOf="@id/chord_chart"
        app:layout_constraintTop_toTopOf="@id/chord_chart" />

    <ImageView
        android:id="@+id/fret_marker_four"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/drawable_chord_fret_marker"
        android:paddingTop="48dp"
        android:layout_marginStart="208dp"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintLeft_toLeftOf="@id/chord_chart"
        app:layout_constraintRight_toRightOf="@id/chord_chart"
        app:layout_constraintTop_toTopOf="@id/chord_chart" />

    <ImageView
        android:id="@+id/fret_marker_five"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/drawable_chord_fret_marker"
        android:paddingTop="48dp"
        android:layout_marginStart="260dp"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintLeft_toLeftOf="@id/chord_chart"
        app:layout_constraintRight_toRightOf="@id/chord_chart"
        app:layout_constraintTop_toTopOf="@id/chord_chart" />

    <ImageView
        android:id="@+id/fret_marker_six"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/drawable_chord_fret_marker"
        android:paddingTop="48dp"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintLeft_toLeftOf="@id/chord_chart"
        app:layout_constraintRight_toRightOf="@id/chord_chart"
        app:layout_constraintTop_toTopOf="@id/chord_chart" />



</android.support.constraint.ConstraintLayout>
